<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Posts</title>
  </head>
  <body>

    <table>
      <thead>
        <th>Author</th>
        <th>Title</th>
        <th>Post</th>
      </thead>
      <tbody>
        {{#each posts}}
          <tr>
            <td><a href="/users/{{ this.users.id }}">{{ this.users.username }}</a></td>
            <td><a href="/posts/{{ this.id }}">{{ this.title}}</a></td>
            <td>{{ this.post }}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
