<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Posts</title>
  </head>
  <body>

    <table>
      <thead>
        <th>Author</th>
        <th>Title</th>
        <th>Post</th>
      </thead>
      <tbody>
        {{#each posts}}
          <td><a href="/users/{{ users.id }}">{{ users.username }}</a></td>
          <td><a href="/post/{{ posts.id }}">{{ posts.title}}</a></td>
          <td>{{ posts.post}}</td>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
